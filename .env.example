# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yoursite.com
NEXT_PUBLIC_SITE_NAME="Fun Coloring Pages"
NODE_ENV=development

# Authentication & Security
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here
# For production, use hashed password instead (generate with bcrypt):
# ADMIN_PASSWORD_HASH=$2a$10$...

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-key-change-in-production-min-32-chars

# CSRF Secret (generate with: openssl rand -base64 32)
CSRF_SECRET=your-csrf-secret-key-change-in-production-min-32-chars

# Cookie Security
NEXT_PUBLIC_SECURE_COOKIE=false  # Set to true in production (HTTPS only)

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GTM_ID=

# Database (For future migration)
DATABASE_URL=

# Email (If contact form needed)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Social Media (Optional)
NEXT_PUBLIC_FACEBOOK_URL=
NEXT_PUBLIC_TWITTER_URL=
NEXT_PUBLIC_INSTAGRAM_URL=

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn

# File Upload Configuration
# MAX_FILE_SIZE=3145728  # 3MB in bytes
